#:kivy 1.1.0

Root:
    text_input: text_input

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
        BoxLayout:
            TextInput:
                id: text_input
                text: ''

        BoxLayout:
            size_hint: (1,.15)
            Button:
                size_hint: (.33,1)
                text: 'Check Query'
                on_release: root.parse_query()
            Button:
                size_hint: (.33,1)
                text: 'Show Query Tree'
                on_release: root.show_tree()
            Button:
                size_hint: (.33,1)
                text: 'Show Query Optimization'
                on_release: root.show_optimized_tree()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)


<TreePrinter>:
    orientation: "vertical"
    Button:
        text: "Close"
        size_hint: (1,.10)
        on_release: root.close()